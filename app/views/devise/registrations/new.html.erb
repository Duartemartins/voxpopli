<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.hidden_field :invite_code, value: @invite&.code || params[:invite_code] %>

    <div>
      <%= f.label :username, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", 
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#003399] focus:border-transparent',
          placeholder: 'Choose a username (lowercase, letters, numbers, underscores)' %>
    </div>

    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autocomplete: "email", 
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#003399] focus:border-transparent' %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#003399] focus:border-transparent' %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-[#003399] focus:border-transparent' %>
    </div>

    <div class="pt-4">
      <%= f.submit "Sign up", class: 'w-full bg-[#003399] text-white px-4 py-2 rounded-lg hover:bg-[#002266] cursor-pointer' %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>
