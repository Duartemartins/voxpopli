<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6">Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'space-y-4' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
    </div>

    <div class="pt-4">
      <%= f.submit "Resend confirmation instructions", class: 'w-full bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer' %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>
