<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, autocomplete: "current-password",
          class: 'mt-1 block w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: 'h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
        <%= f.label :remember_me, class: 'ml-2 text-sm text-gray-700' %>
      </div>
    <% end %>

    <div class="pt-4">
      <%= f.submit "Sign in", class: 'w-full bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer' %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>
