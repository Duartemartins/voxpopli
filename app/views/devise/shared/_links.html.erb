<div class="space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "EXISTING_OPERATIVE? // LOGIN", new_session_path(resource_name), class: 'font-mono text-xs text-acid-cyan hover:text-white uppercase tracking-widest block hover:underline' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "LOST_CREDENTIALS? // RECOVER", new_password_path(resource_name), class: 'font-mono text-xs text-acid-cyan hover:text-white uppercase tracking-widest block hover:underline' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "MISSING_VERIFICATION? // RESEND", new_confirmation_path(resource_name), class: 'font-mono text-xs text-acid-cyan hover:text-white uppercase tracking-widest block hover:underline' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "ACCOUNT_LOCKED? // UNLOCK", new_unlock_path(resource_name), class: 'font-mono text-xs text-acid-cyan hover:text-white uppercase tracking-widest block hover:underline' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "ACCESS_VIA_#{OmniAuth::Utils.camelize(provider).upcase}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'font-mono text-xs text-acid-cyan hover:text-white uppercase tracking-widest block hover:underline bg-transparent border-none cursor-pointer p-0' %>
    <% end %>
  <% end %>
</div>
