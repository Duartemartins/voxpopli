<div class="max-w-md mx-auto mt-12 border border-steel bg-carbon p-8 shadow-[8px_8px_0_0_#333]">
  <h2 class="font-mono text-2xl font-bold text-white mb-8 tracking-tighter flex items-center gap-2">
    <span class="text-acid-lime">>></span> RESET_CREDENTIALS
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "NEW_ACCESS_CODE // PASSWORD", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <% if @minimum_password_length %>
        <span class="block font-mono text-[10px] text-ash mb-1">(<%= @minimum_password_length %> chars min)</span>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: "enter_new_password..." %>
    </div>

    <div>
      <%= f.label :password_confirmation, "VERIFY_CODE // CONFIRM", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: "confirm_new_password..." %>
    </div>

    <div class="pt-4">
      <%= f.submit "UPDATE_CREDENTIALS", class: 'w-full bg-acid-lime text-obsidian font-mono font-bold uppercase tracking-widest py-3 hover:bg-white hover:shadow-[4px_4px_0_0_#FFF] transition-all cursor-pointer border-none' %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-steel text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
