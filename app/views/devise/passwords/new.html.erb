<div class="max-w-md mx-auto mt-12 border border-steel bg-carbon p-8 shadow-[8px_8px_0_0_#333]">
  <h2 class="font-mono text-2xl font-bold text-white mb-8 tracking-tighter flex items-center gap-2">
    <span class="text-acid-lime">>></span> INITIATE_RECOVERY
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, "TARGET_ID // EMAIL", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: "enter_email_address..." %>
    </div>

    <div class="pt-4">
      <%= f.submit "TRANSMIT_RECOVERY_SEQUENCE", class: 'w-full bg-acid-lime text-obsidian font-mono font-bold uppercase tracking-widest py-3 hover:bg-white hover:shadow-[4px_4px_0_0_#FFF] transition-all cursor-pointer border-none' %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-steel text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
