<%= link_to user_path(builder.username), class: "block bg-carbon border border-steel p-4 hover:border-acid-lime hover:shadow-[4px_4px_0_0_#CCFF00] transition-all group" do %>
  <div class="flex items-start gap-4">
    <%= user_avatar(builder, classes: "w-12 h-12 flex-shrink-0") %>
    
    <div class="flex-1 min-w-0">
      <h3 class="font-mono font-bold text-white group-hover:text-acid-lime truncate">
        <%= builder.display_name || builder.username %>
      </h3>
      <p class="font-mono text-xs text-acid-lime">@<%= builder.username %></p>
      
      <% if builder.tagline.present? %>
        <p class="mt-2 font-sans text-sm text-ash line-clamp-2"><%= builder.tagline %></p>
      <% end %>
      
      <!-- Skills -->
      <% if builder.skills_list.any? %>
        <div class="mt-3 flex flex-wrap gap-1">
          <% builder.skills_list.first(3).each do |skill| %>
            <span class="inline-block bg-obsidian border border-steel px-2 py-0.5 font-mono text-[10px] text-ash uppercase">
              <%= skill %>
            </span>
          <% end %>
          <% if builder.skills_list.size > 3 %>
            <span class="inline-block px-2 py-0.5 font-mono text-[10px] text-ash">
              +<%= builder.skills_list.size - 3 %>
            </span>
          <% end %>
        </div>
      <% end %>
      
      <!-- Looking For Badge -->
      <% if builder.looking_for.present? %>
        <div class="mt-2">
          <span class="inline-block bg-acid-lime/10 border border-acid-lime/30 px-2 py-0.5 font-mono text-[10px] text-acid-lime uppercase">
            Looking for: <%= builder.looking_for_display %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Products -->
  <% if builder.launched_products_list.any? %>
    <div class="mt-3 pt-3 border-t border-steel">
      <div class="font-mono text-[10px] text-ash uppercase tracking-widest mb-2">PRODUCTS</div>
      <div class="space-y-1">
        <% builder.launched_products_list.first(3).each do |product| %>
          <div class="flex items-center justify-between gap-2">
            <span class="font-mono text-xs text-acid-cyan truncate"><%= product["name"] %></span>
            <% if product["mrr"].present? && product["mrr"].to_i > 0 %>
              <span class="font-mono text-[10px] text-acid-lime flex-shrink-0">$<%= number_with_delimiter(product["mrr"]) %>/mo</span>
            <% end %>
          </div>
        <% end %>
        <% if builder.launched_products_list.size > 3 %>
          <div class="font-mono text-[10px] text-ash">+<%= builder.launched_products_list.size - 3 %> more</div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Stats -->
  <div class="mt-4 pt-3 border-t border-steel flex gap-4 font-mono text-[10px] text-ash uppercase">
    <span><strong class="text-white"><%= builder.posts_count %></strong> posts</span>
    <span><strong class="text-white"><%= builder.followers_count %></strong> followers</span>
    <% if builder.website.present? %>
      <span class="text-acid-cyan">LINK</span>
    <% end %>
  </div>
<% end %>
