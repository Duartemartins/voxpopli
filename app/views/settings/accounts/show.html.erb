<div class="max-w-xl space-y-8">
  <h1 class="font-mono text-2xl font-bold text-white tracking-tighter flex items-center gap-2">
    <span class="text-acid-lime">>></span> SYSTEM_CONFIG
  </h1>

  <div class="bg-carbon border border-steel p-6 shadow-[4px_4px_0_0_#333]">
    <h2 class="font-mono text-lg font-bold text-white mb-2">INVITE_CODES</h2>
    <p class="font-mono text-xs text-ash mb-4">Generate access keys for new operatives. Single use only.</p>
    
    <div class="mt-4 space-y-3">
      <% current_user.ensure_invite_codes!.each do |invite| %>
        <div class="flex items-center justify-between p-3 bg-obsidian border border-steel">
          <div class="flex items-center gap-3">
            <code class="font-mono text-sm <%= invite.used_at? ? 'text-steel line-through' : 'text-acid-lime' %>">
              <%= invite.code %>
            </code>
            <% if invite.used_at? %>
              <span class="font-mono text-[10px] text-ash uppercase">
                CLAIMED_BY: <%= invite.invitee&.username || 'UNKNOWN' %>
              </span>
            <% end %>
          </div>
          <div class="flex items-center gap-2">
            <% if invite.used_at? %>
              <span class="px-2 py-1 text-[10px] font-mono uppercase bg-steel/20 text-steel border border-steel">DEPLETED</span>
            <% else %>
              <span class="px-2 py-1 text-[10px] font-mono uppercase bg-acid-lime/10 text-acid-lime border border-acid-lime">ACTIVE</span>
              <button type="button" 
                      data-controller="clipboard"
                      data-clipboard-content-value="<%= invite.code %>"
                      data-action="click->clipboard#copy"
                      class="px-2 py-1 text-[10px] font-mono uppercase bg-acid-cyan/10 text-acid-cyan border border-acid-cyan hover:bg-acid-cyan hover:text-obsidian transition-colors cursor-pointer">
                COPY
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-carbon border border-steel p-6 shadow-[4px_4px_0_0_#333]">
    <h2 class="font-mono text-lg font-bold text-white mb-2">API_ACCESS</h2>
    <p class="font-mono text-xs text-ash mb-4">Manage programmatic access credentials.</p>
    
    <%= link_to settings_api_keys_path,
        class: 'mt-2 inline-block font-mono text-xs uppercase tracking-widest px-4 py-2 bg-steel/20 text-white border border-steel hover:bg-acid-cyan hover:text-obsidian hover:border-acid-cyan transition-all' do %>
      [ MANAGE_KEYS ]
    <% end %>
  </div>

  <div class="bg-carbon border border-acid-pink p-6 shadow-[4px_4px_0_0_#FF0099]">
    <h2 class="font-mono text-lg font-bold text-acid-pink mb-2">DANGER_ZONE</h2>
    <p class="font-mono text-xs text-ash mb-4">Irreversible system termination. Proceed with caution.</p>
    
    <%= button_to settings_account_path, method: :delete,
        class: 'font-mono text-xs uppercase tracking-widest px-4 py-2 bg-acid-pink text-obsidian hover:bg-white hover:text-acid-pink transition-all border-none cursor-pointer',
        data: { turbo_confirm: 'CONFIRM_SYSTEM_TERMINATION?' } do %>
      [ TERMINATE_ACCOUNT ]
    <% end %>
  </div>
</div>
