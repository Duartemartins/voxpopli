<div class="max-w-lg mx-auto mt-12">
  <h2 class="font-mono text-2xl font-bold text-white mb-2 tracking-tighter flex items-center gap-2">
    <span class="text-acid-lime">>></span> JOIN_VOXPOPLI
  </h2>
  <p class="font-mono text-xs text-ash mb-8 uppercase tracking-widest">Choose your registration path.</p>

  <div class="grid md:grid-cols-2 gap-6">
    <%# Path A: Invite Code %>
    <div class="border border-steel bg-carbon p-6 shadow-[8px_8px_0_0_#333]">
      <h3 class="font-mono text-lg font-bold text-white mb-4 tracking-tighter">
        <span class="text-acid-cyan">01</span> // INVITE_CODE
      </h3>
      <p class="font-mono text-xs text-ash mb-6">Get invited by an existing member.</p>

      <%= form_with url: verify_invite_path, method: :post, class: 'space-y-4' do |f| %>
        <div>
          <%= label_tag :code, 'ACCESS_KEY', class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
          <%= text_field_tag :code, params[:code], 
              autofocus: true, 
              autocomplete: "off",
              placeholder: "ENTER_CODE...",
              class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all uppercase placeholder-steel text-sm' %>
        </div>

        <div>
          <%= submit_tag 'VERIFY_ACCESS', class: 'w-full bg-acid-cyan text-obsidian font-mono font-bold uppercase tracking-widest py-3 hover:bg-white hover:shadow-[4px_4px_0_0_#FFF] transition-all cursor-pointer border-none text-sm' %>
        </div>
      <% end %>

      <p class="mt-4 font-mono text-[10px] text-ash">FREE // Requires invite from member</p>
    </div>

    <%# Path B: Paid Registration %>
    <div class="border border-acid-lime bg-carbon p-6 shadow-[8px_8px_0_0_#CCFF00]">
      <h3 class="font-mono text-lg font-bold text-white mb-4 tracking-tighter">
        <span class="text-acid-lime">02</span> // PAID_ACCESS
      </h3>
      <p class="font-mono text-xs text-ash mb-6">Skip the waitlist with a one-time payment.</p>

      <%= link_to checkout_new_path, class: 'block w-full bg-acid-lime text-obsidian font-mono font-bold uppercase tracking-widest py-3 hover:bg-white hover:shadow-[4px_4px_0_0_#FFF] transition-all cursor-pointer border-none text-sm text-center' do %>
        PAY $5 // INSTANT_ACCESS
      <% end %>

      <p class="mt-4 font-mono text-[10px] text-ash">$5 USD // One-time payment</p>

      <div class="mt-4 p-3 border border-dashed border-steel bg-obsidian">
        <p class="font-mono text-[10px] text-ash">
          <span class="text-acid-lime">++</span> Lifetime access<br>
          <span class="text-acid-lime">++</span> Do-Follow Backlinks<br>
          <span class="text-acid-lime">++</span> Paid User Badge
        </p>
      </div>
    </div>
  </div>

  <div class="mt-8 pt-6 border-t border-steel text-center font-mono text-xs">
    <p class="text-ash">EXISTING_OPERATIVE? <%= link_to 'INITIATE_LOGIN', new_user_session_path, class: 'text-acid-cyan hover:text-white uppercase tracking-widest ml-2' %></p>
  </div>
</div>
