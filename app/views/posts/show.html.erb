<div class="space-y-8">
  <%= render @post %>

  <% if user_signed_in? %>
        <div class="mt-8">
      <%= render 'reply_form', post: @post %>
    </div>
  <% end %>

  <div class="space-y-4">
    <h3 class="font-mono text-xs text-acid-lime uppercase tracking-widest border-b border-steel pb-2">>> REPLY_STREAM</h3>
    <div id="replies" class="space-y-4">
      <% if @replies.any? %>
        <%= render @replies %>
      <% else %>
        <p id="no-replies" class="font-mono text-sm text-ash">NO_DATA // Initiate first response transmission.</p>
      <% end %>
    </div>
  </div>
</div>
