<div class="mb-12 bg-carbon border border-steel p-1 relative group" data-controller="image-preview">
  <!-- Decorative corners -->
  <div class="absolute -top-1 -left-1 w-3 h-3 border-t-2 border-l-2 border-acid-lime"></div>
  <div class="absolute -bottom-1 -right-1 w-3 h-3 border-b-2 border-r-2 border-acid-lime"></div>
  
  <%= form_with model: Post.new, class: 'bg-obsidian border border-steel p-6' do |f| %>
    <div class="group relative mb-6">
      <label class="absolute -top-2.5 left-3 bg-obsidian px-1 font-mono text-xs text-acid-lime">
        INPUT_STREAM
      </label>
      <%= f.text_area :body, 
          placeholder: "> Enter data stream...",
          class: 'w-full bg-transparent border border-steel px-4 py-4 text-white font-mono text-sm focus:outline-none focus:border-acid-lime focus:shadow-[0_0_20px_rgba(204,255,0,0.1)] transition-all duration-150 min-h-[120px] placeholder-steel resize-none' %>
    </div>
    
    <div class="flex justify-between items-center">
      <div class="flex gap-2">
        <%= f.collection_select :theme_id, Theme.all, :id, :name, 
            { include_blank: 'THEME' },
            { class: 'h-8 bg-transparent border border-steel px-2 text-ash font-mono text-xs focus:outline-none focus:border-acid-cyan hover:border-acid-cyan hover:text-acid-cyan transition-colors duration-0 uppercase' } %>
        
        <label class="w-8 h-8 border border-steel flex items-center justify-center text-ash hover:text-acid-cyan hover:border-acid-cyan transition-colors duration-0 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
          </svg>
          <%= f.file_field :image, accept: 'image/*', class: 'hidden', data: { image_preview_target: 'input', action: 'change->image-preview#preview' } %>
        </label>
      </div>
      
      <%= f.submit '[ EXECUTE ]', class: 'bg-acid-lime text-obsidian border border-acid-lime px-6 py-2 font-mono text-xs uppercase tracking-wider font-bold hover:bg-transparent hover:text-acid-lime hover:shadow-[0_0_15px_rgba(204,255,0,0.4)] transition-all duration-150 cursor-pointer' %>
    </div>
    
    <div data-image-preview-target="preview" class="mt-4 hidden border border-steel p-2 bg-obsidian">
      <div class="relative inline-block">
        <img data-image-preview-target="previewImage" src="" alt="Preview" class="max-h-48 border border-steel" />
        <button type="button" data-action="click->image-preview#clear" class="absolute top-1 right-1 bg-obsidian border border-acid-pink text-acid-pink p-1 hover:bg-acid-pink hover:text-obsidian transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>
