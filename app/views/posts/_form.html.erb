<%= form_with model: Post.new, class: 'bg-white rounded-lg shadow p-4' do |f| %>
  <%= f.text_area :body, 
      placeholder: "What are you building?",
      class: 'w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-[#003399] focus:border-transparent resize-none',
      rows: 4 %>
  
  <div class="flex items-center justify-between mt-3">
    <%= f.collection_select :theme_id, Theme.all, :id, :name, 
        { include_blank: 'Select theme (optional)' },
        { class: 'border border-gray-300 rounded px-3 py-2' } %>
    
    <%= f.submit 'Post', class: 'bg-[#003399] text-white px-4 py-2 rounded-lg hover:bg-[#002266] cursor-pointer' %>
  </div>
<% end %>
