<div id="vote_buttons_<%= post.id %>" class="flex-1 flex items-stretch divide-x divide-steel">
  <% if user_signed_in? %>
    <%= button_to post_vote_path(post, value: 1), method: :post, 
        class: "flex-1 hover:bg-steel/20 font-mono text-xs transition-all duration-0 flex items-center justify-center group/btn #{post.votes.find_by(user: current_user)&.value == 1 ? 'text-acid-lime' : 'text-ash hover:text-acid-lime'}",
        form: { class: 'contents' } do %>
      <span class="group-hover/btn:-translate-y-0.5 transition-transform duration-150">▲</span>
    <% end %>
    
    <div class="px-3 flex items-center justify-center font-mono text-xs text-white bg-obsidian/50 min-w-[3ch]">
      <%= post.score %>
    </div>
    
    <%= button_to post_vote_path(post, value: -1), method: :post, 
        class: "flex-1 hover:bg-steel/20 font-mono text-xs transition-all duration-0 flex items-center justify-center group/btn #{post.votes.find_by(user: current_user)&.value == -1 ? 'text-acid-pink' : 'text-ash hover:text-acid-pink'}",
        form: { class: 'contents' } do %>
      <span class="group-hover/btn:translate-y-0.5 transition-transform duration-150">▼</span>
    <% end %>
  <% else %>
    <div class="flex-1 py-3 text-ash font-mono text-xs flex items-center justify-center gap-3">
      <span>▲</span>
      <span class="text-white"><%= post.score %></span>
      <span>▼</span>
    </div>
  <% end %>
</div>
