<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Profile</h1>

    <%= form_with model: @user, url: user_path(@user.username), method: :patch, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h2 class="text-red-800 font-medium mb-2">
            <%= pluralize(@user.errors.count, "error") %> prevented your profile from being saved:
          </h2>
          <ul class="list-disc list-inside text-red-700 text-sm">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :display_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :display_name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#003399] focus:border-[#003399]",
            placeholder: "Your display name" %>
        <p class="mt-1 text-sm text-gray-500">This is how your name will appear on your profile</p>
      </div>

      <div>
        <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :bio, 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#003399] focus:border-[#003399]",
            placeholder: "Tell us about yourself" %>
        <p class="mt-1 text-sm text-gray-500">A short bio about yourself (optional)</p>
      </div>

      <div>
        <%= form.label :website, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.url_field :website, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#003399] focus:border-[#003399]",
            placeholder: "https://yourwebsite.com" %>
        <p class="mt-1 text-sm text-gray-500">Your personal website or portfolio (optional)</p>
      </div>

      <div>
        <%= form.label :avatar_url, "Avatar URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.url_field :avatar_url, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#003399] focus:border-[#003399]",
            placeholder: "https://example.com/avatar.jpg" %>
        <p class="mt-1 text-sm text-gray-500">URL to your profile picture (optional)</p>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= link_to "Cancel", user_path(@user.username), 
            class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
        <%= form.submit "Save Changes", 
            class: "px-6 py-2 bg-[#003399] text-white rounded-lg hover:bg-[#002266] cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
