<div class="max-w-md mx-auto mt-12 border border-acid-lime bg-carbon p-8 shadow-[8px_8px_0_0_#CCFF00]">
  <h2 class="font-mono text-2xl font-bold text-white mb-2 tracking-tighter flex items-center gap-2">
    <span class="text-acid-lime">>></span> PAID_REGISTRATION
  </h2>
  <p class="font-mono text-xs text-ash mb-8 uppercase tracking-widest">Create your account and pay $5 to join.</p>

  <%= form_with url: checkout_path, method: :post, scope: :user, class: 'space-y-6', data: { turbo: false } do |f| %>
    <div>
      <%= f.label :username, "IDENTITY_HANDLE // USERNAME", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", 
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: 'enter_username...' %>
      <p class="mt-1 font-mono text-[10px] text-ash">lowercase, letters, numbers, underscores only</p>
    </div>

    <div>
      <%= f.label :email, "COMM_CHANNEL // EMAIL", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <%= f.email_field :email, autocomplete: "email", 
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: 'enter_email...' %>
    </div>

    <div>
      <%= f.label :password, "SECURITY_KEY // PASSWORD", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <span class="block font-mono text-[10px] text-ash mb-1">(6 chars min)</span>
      <%= f.password_field :password, autocomplete: "new-password",
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: '••••••••' %>
    </div>

    <div>
      <%= f.label :password_confirmation, "CONFIRM_KEY // PASSWORD", class: 'block font-mono text-xs text-acid-lime mb-2 uppercase tracking-widest' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: 'w-full bg-obsidian border border-steel text-white font-mono p-3 focus:border-acid-lime focus:outline-none focus:shadow-[0_0_10px_rgba(204,255,0,0.3)] transition-all placeholder-steel',
          placeholder: '••••••••' %>
    </div>

    <div class="pt-4 border-t border-steel">
      <div class="flex items-center justify-between mb-4">
        <span class="font-mono text-sm text-white">REGISTRATION_FEE</span>
        <span class="font-mono text-lg text-acid-lime font-bold">$5.00 USD</span>
      </div>
      <p class="font-mono text-[10px] text-ash mb-4">One-time payment. Lifetime access. Secure checkout via Stripe.</p>
      
      <%= f.submit "PROCEED_TO_PAYMENT", class: 'w-full bg-acid-lime text-obsidian font-mono font-bold uppercase tracking-widest py-3 hover:bg-white hover:shadow-[4px_4px_0_0_#FFF] transition-all cursor-pointer border-none' %>
    </div>
  <% end %>

  <div class="mt-8 pt-6 border-t border-steel text-center font-mono text-xs">
    <p class="text-ash">Have an invite code? <%= link_to 'USE_INVITE', join_path, class: 'text-acid-cyan hover:text-white uppercase tracking-widest ml-2' %></p>
  </div>
</div>
